<script>
    function addtowishlist(proId) {
    console.log(proId);
    $.ajax({
      url: "/add_to_wishlist?wishid=" + proId,
      method: "get",
      success: (response) => {
        let count = $("#wish-count").html();
        count = parseInt(count) + 1;
        $("#wish-count").html(count);
      },
    });
  }
  function addtocart(proId) {
      
  
